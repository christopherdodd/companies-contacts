- @contacts.each do |c|
  %li{:class => 'contact-list-item'}
    =link_to c.full_name, :controller => 'contacts', :action => 'show', :id => c.id
    .edit-links
      =link_to 'Edit', :controller => 'contacts', :action => 'edit', :id => c.id
      |
      =link_to 'Delete', {:controller => 'contacts', :action => 'destroy', :id => c.id}, method: :delete, data: { confirm: 'Are you certain you want to delete ' + c.full_name + '?' }

= link_to "Add a Contact", :controller => 'contacts', :action => 'new'