%h2 Add a Contact

= error_messages_for(@contact)

= simple_form_for @contact, url: {action: 'create'} do |f|
  = f.input :first_name
  = f.input :last_name
  = f.association :company
  = f.input :position
  = f.input :phone
  = f.input :email
  = f.input :image, as: :file, :label => "Profile Picture:"
  = f.submit

= link_to '<< Back to index page', :controller => 'home', :action => 'index'
