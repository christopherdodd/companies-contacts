%h2 Edit Contact

= simple_form_for @contact, url: {action: "update"}, html: { class: 'form-horizontal'} do |f|
  .form-group= f.input :first_name, :label_html => {:class => 'col-sm-2 control-label'}
  .form-group= f.input :last_name, :label_html => {:class => 'col-sm-2 control-label'}
  .form-group= f.association :company, :label_html => {:class => 'col-sm-2 control-label'}
  .form-group= f.input :position, :label_html => {:class => 'col-sm-2 control-label'}
  .form-group= f.input :phone, :label_html => {:class => 'col-sm-2 control-label'}
  .form-group= f.input :email, :label_html => {:class => 'col-sm-2 control-label'}
  .form-group= f.input :image, as: :file, :label => "Profile Picture:", :label_html => {:class => 'col-sm-2 control-label'}
  .col-sm-offset-2.col-sm-10
    .form-group= f.submit 'Update Contact', :input_html => {:class => 'btn btn-default'}

= link_to '<< Back to index page', :controller => 'home', :action => 'index'