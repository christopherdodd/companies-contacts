%h2 Add a Company

= error_messages_for(@company)

= simple_form_for @company, url: {action: "create"}, html: { class: 'form-horizontal'} do |f|
  .form-group= f.input :name, :label_html => {:class => 'col-sm-2 control-label'}
  .form-group= f.input :image, as: :file, :label_html => {:class => 'col-sm-2 control-label'}
  .col-sm-offset-2.col-sm-10
    .form-group= f.submit 'Create Company', :input_html => {:class => 'btn btn-default'}

= link_to '<< Back to index page', :controller => 'home', :action => 'index'